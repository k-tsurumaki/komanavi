# Gemini API Key
# Google AI Studio (https://aistudio.google.com/) で取得できます
GEMINI_API_KEY=your-gemini-api-key-here

# Firebase（クライアント用 - NEXT_PUBLIC_プレフィックスが必要）
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=

# Firebase（サーバー用）
FIREBASE_PROJECT_ID=
FIREBASE_DATABASE_ID=komanavi

# Auth.js
# AUTH_SECRET は `npx auth secret` で生成できます
AUTH_SECRET=
AUTH_URL=http://localhost:3000

# Google OAuth
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# GCP 設定
GCP_PROJECT_ID=zenn-ai-agent-hackathon-vol4
GCP_LOCATION=global

# Cloud Storage（漫画画像保存用）
GCS_MANGA_BUCKET=komanavi-manga-images
GCS_SIGNED_URL_TTL_MINUTES=60

# Cloud Tasks（漫画生成ジョブキュー）
CLOUD_TASKS_QUEUE=manga-generation
CLOUD_TASKS_LOCATION=asia-northeast1
CLOUD_RUN_SERVICE_ACCOUNT=komanavi-cloud-run@zenn-ai-agent-hackathon-vol4.iam.gserviceaccount.com

# Worker サービス URL（Cloud Run の Worker サービス）
# 本番: https://komanavi-worker-{PROJECT_NUMBER}.asia-northeast1.run.app/process
# ローカル開発時: http://localhost:8081/process
MANGA_WORKER_URL=
