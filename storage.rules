rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /conversation-results/{userId}/{resultId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }
  }
}
